<div class="container">
  
  <h1><%= @list.name %></h1>
  <button type="button" class="btn btn-blue" data-toggle="modal" data-target="#exampleModal">
    Bookmark a movie
  </button>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add a Movie to <%= @list.name %> list</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render 'bookmarks/form' %>
        </div>
      </div>
    </div>
  </div>
 

  <div class="movies-list">
    <% @list.movies.each do |movie| %>
      <div class="movie-card">
        <img src="<%= movie.poster_url %>" alt="movie poster" class="movie-image">
        <div class="movie-info">
          <h3><%= movie.title %></h3>
          <span class="rating"><%= movie.rating %></span>
        </div>
        <div class="movie-comments">
            <% movie.bookmarks.each do |bookmark| %>
              <i class="fas fa-quote-left"></i> <%= bookmark.comment %>
            <% end %>
        </div>
        <div class="overview">
          <%= movie.overview %>
        </div>
      </div> <!-- movie-card-->
    <% end %>
  </div> <!-- movie-list-->

</div> <!-- container -->

<%= javascript_pack_tag 'color_rating' %>