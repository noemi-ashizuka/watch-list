<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1505686994434-e3cc5abf1330?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2104&q=80')">

  <div class="banner-text">
    <h1>Curated movie lists</h1>
    <h3>Find the perfect movie for your movie night</h3>
  </div>
</div> <!-- banner -->

<div class="container">
  <div class="page-header-spaced">
    <h1>All lists</h1>
    <%= link_to '#list-form' do %>
      <button class="btn btn-blue">
        Create a new List
      </button>
    <% end %>
  </div>

  <div class="list-card-container" id="list-form">
    <% @lists.each do |list| %>
      <!-- <div data-aos="fade-up" data-aos-duration="2000"> -->
        <%= link_to list_path(list) do %>
          <div class="list-card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1334&q=80') %>)">
            <h3><%= list.name %></h3>
          </div>
        <% end %>
      <!-- </div> -->
    <% end %>
  </div> <!-- list-card-container -->
  
  <div class="form-container">
    <%= render 'form' %>
  </div>
  
</div> <!-- container -->
